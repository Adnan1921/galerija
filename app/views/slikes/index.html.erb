<div class="container">
<p id="notice"><%= notice %></p>


<table>
  <thead>
    
  </thead>
	<a href="/slikes/new" class="btn btn-outline-secondary btn-lg btn-block">Dodaj novu sliku</a>
	

  <tbody>
    <% @slikes.each do |slike| %>
      
  </tbody>
</table>

<br>


<div class="container">
  <div class="row">
    <div class="col-12">
		<table class="table table-striped table-image table-hover">
		  <thead>
		    <tr>
		      <th scope="col">Slika</th>
		      <th scope="col">Datum</th>
		      <th scope="col">Naziv</th>	
									
		      <th scope="col"></th>
		      <th scope="col"></th>
					
		    </tr>
				
		  </thead>
		  <tbody>
		    <tr>
		      <td class="w-25">
			      <%= image_tag(slike.thumbnail) if slike.avatar.attached? %>
		      </td>
					<td><%= slike.datum %></td>
		      <td><%= slike.naziv_slike %></td>
		      <td><%= slike.slika %></td>
					
					
					<td><button class="btn btn-outline-danger"><%= link_to 'Show', slike %></button>
		      <button class="btn btn-outline-danger"><%= link_to 'Edit', edit_slike_path(slike) %></button>
		      <button class="btn btn-outline-danger"><%= link_to 'Destroy', slike, method: :delete, data: { confirm: 'Are you sure?' } %></button>
				</td>
		    </tr>
		    
		  </tbody>
		</table>   
    </div>
  </div>
</div>

    <% end %>
