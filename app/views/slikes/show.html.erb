<div class="container">
<p id="notice"><%= notice %></p>




<div class="container">
	
	<%= render 'layouts/modal'%>
	

	
  <div class="row">
    <div class="col-12">
		<table class="table table-striped table-image table-hover">
		  <thead>
		    <tr>
		      <th scope="col">Image</th>
		      <th scope="col">Naziv slike</th>
		      <th scope="col">Datum</th>
		      <th scope="col">Actions</th>
					
		      <th scope="col"></th>
					
		    </tr>
				
		  </thead>
		  <tbody>
		    <tr>
		      <td class="w-25">
	      <%= image_tag(@slike.srednja) if @slike.avatar.attached? %>
		      </td>
		      <td>  <%= @slike.naziv_slike %></td>
		      <td><%= @slike.datum %></td>
					
		      <td><button class="btn btn-outline-danger"><%= link_to 'Edit', edit_slike_path(@slike) %></button></td>
		      <td><button class="btn btn-outline-danger"><%= link_to 'Destroy', @slike, method: :delete, data: { confirm: 'Are you sure?' } %></button><td>
				</td>
		    </tr>
		    
		  </tbody>
		</table>   
		<a href="/slikes" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Back</a>
		
    </div>
  </div>
</div>
	